<h1>Update <%= @word.name %></h1>

<form action="/words/<%= @word.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Change word</label>
  <input id="name" name="name" type="text">

  <button type="submit" class="btn btn-primary">Update <%= @word.name %></button>
</form>
<form action="/words/<%= @word.id %>" method="post">
  <input name="_method" type="hidden" value="Delete">
  <button type="submit" class="btn btn-primary">Delete <%= @word.name %></button>
</form>
  <form action="/words/<%= @word.id %>/definitions" method="post">

    <label for="name">Add definition</label>
    <input id="definitiontext" name="definitiontext" type="text">

    <button type="submit" class="btn btn-primary">Add definition</button>
  </form>
  <br>
<br>
<h1> Definitions: </h1>
<% if @definitions.any? %>
<% @definitions.each do |definition| %>
<em><%= definition.text %></em>
    <form action="/words/<%= @word.id %>/definitions/<%= definition.id %>" method="post">
  <input name="_method" type="hidden" value="Delete">
  <button type="submit" class="btn btn-primary">Delete this definition</button>
</form>
    <form action="/words/<%= @word.id %>/definitions/<%= definition.id %>" method="post">
    <input name="_method" type="hidden" value="patch">

    <label for="name">Change definition</label>
    <input id="updated_text" name="updated_text" type="text">

    <button type="submit" class="btn btn-primary">Update <%= definition.text %> </button>
</form>
<hr>
      <% end %>
<% else %>
    <h1>There are currently no definitions ðŸ˜ž</h1>
<% end %>
